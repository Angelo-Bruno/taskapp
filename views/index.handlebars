<hr>
<h2 style="color: white;">Tarefas a decorrer:</h2><br>


{{#each tasks }}

<button class=" bg-transparent border-0" data-toggle="modal" data-target="#s{{_id}}">


  <div id="seccao">{{seccao}}</div>
  

  <div class="group pert">

    <div id="coluna1">{{trabalho}}</div>
    <div id="coluna2">{{cliente}}</div>
    <div id="coluna3">{{data}}</div>
    <!-- <div id="coluna3"></div>-->
    <div id="coluna4"></div>
    <br>
  </div>
  </button>

<div class="modal fade " id="s{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Descri√ßao</h5>
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="divis"><h5 >Seccao: {{seccao}}</h5></div>
        <div class="divis"><h5 >trabalho: {{trabalho}}</h5></div>
        <div class="divis"><h5 >cliente: {{cliente}}</h5></div>
        
       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>

      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Trabalho terminado?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Nao</button>
        <button type="button" class="btn btn-success" id="timerStop">Sim</button>
      </div>


    </div>
  </div>
</div>



{{else}}
<p>Nenhuma task</p>

{{/each}}

